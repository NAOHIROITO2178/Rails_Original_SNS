<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規ポートフォリオ作成
      </h1>
    </div>
  </div>
</section>

<% if @content.errors.any? %>
  <div class="notification is-danger">
     <h2><%= pluralize(@content.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @content.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @content do |f| %>
          <div class="field">
          <%= f.label :title, "ポートフォリオ名", class: "label" %>
          <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
          <%= f.label :body, "ポートフォリオの説明", class: "label" %>
          <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
          <%= f.label :image, "写真", class: "label" %>
          <%= f.attachment_field :image, class: "input" %>
          </div>
          
          <div class="field">
          <%= f.label :video, "動画", class: "label" %>
          <%= f.file_field :video, class: "input" %> 
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>